<div class="page-header">
  <h1><%= t('Configuration') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t(:interface_language) %>:</strong></dt>
  <dd><%= lang_human(@user_config.lang) %></dd>
  <dt><strong><%= t(:server) %>:</strong></dt>
  <dd><%= @user_config.server %></dd>
  <dt><strong><%= t(:auth_port) %>:</strong></dt>
  <dd><%= secureport_human(@user_config.port) %></dd>
  <dt><strong><%= t(:login) %>:</strong></dt>
  <dd><%= @user_config.login %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Ok",
              root_path, :class => 'btn'  %>
  <%= link_to t('Edit', :default => t("helpers.links.edit")),
              edit_user_config_path(@user_config), :class => 'btn btn-danger' %>
 </div>
