<ul style="font-weight: bold; color: red;">
  <% @recipient.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul><br />
<%= form_for @recipient, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label t(:email), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t(:language), :class => 'control-label' %>
    <div class="controls">
      <%= f.select :lang, select_langs %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t(:gender), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gender, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t(:salutation), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :salutation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t(:name), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t(:patronymic), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :patronymic, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t(:surname), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :surname, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t(:Save), :class => 'btn btn-primary' %>
    <%= link_to t('Cancel', :default => t("helpers.links.cancel")),
                recipients_path, :class => 'btn' %>
  </div>
<% end %>
