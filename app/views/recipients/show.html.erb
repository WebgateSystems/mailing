<div class="page-header">
  <h1><%=t 'recipient' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t(:email) %>:</strong></dt>
  <dd><%= @recipient.email %></dd>
  <dt><strong><%= t(:language) %>:</strong></dt>
  <dd><%= lang_human(@recipient.lang) %></dd>
  <dt><strong><%= t(:gender) %>:</strong></dt>
  <dd><%= @recipient.gender %></dd>
  <dt><strong><%= t(:salutation) %>:</strong></dt>
  <dd><%= @recipient.salutation %></dd>
  <dt><strong><%= t(:name) %>:</strong></dt>
  <dd><%= @recipient.name %></dd>
  <dt><strong><%= t(:patronymic) %>:</strong></dt>
  <dd><%= @recipient.patronymic %></dd>
  <dt><strong><%= t(:surname) %>:</strong></dt>
  <dd><%= @recipient.surname %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Ok", recipients_path, :class => 'btn'  %>
  <%= link_to t('Edit', :default => t("helpers.links.edit")),
              edit_recipient_path(@recipient), :class => 'btn' %>
  <%= link_to t('Destroy', :default => t("helpers.links.destroy")),
              recipient_path(@recipient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('are_you_sure'))) },
              :class => 'btn btn-danger' %>
</div>
