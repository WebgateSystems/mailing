<div class="page-header">
  <h1><%=t 'distributions' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:id) %></th>
      <th width=40%><%= t(:title) %></th>
      <th><%= t(:status) %></th>
      <th><%= t(:created_at) %></th>
      <th><%=t 'Actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @distributions.each do |distribution| %>
      <tr>
        <td><%= distribution.id %></td>
        <td><%= link_to distribution.title, distribution_path(distribution) %></td>
        <td><%= distribution.status.title %></td>
        <td><%= distribution.created_at %></td>
        <td>
          <%= link_to t('Edit', :default => t("helpers.links.edit")),
                      edit_distribution_path(distribution), :class => 'btn btn-mini' %>
          <%= link_to t('Destroy', :default => t("helpers.links.destroy")),
                      distribution_path(distribution),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('are_you_sure') )) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('New', :default => t("helpers.links.new")),
            new_distribution_path,
            :class => 'btn btn-primary' %>
